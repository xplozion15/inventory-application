<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fruit inventory</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('navbar', {navbarLinks:navbarLinks}) %>
    <% categories.forEach(category => {    %>
        <div>
            <p> <%= category.name %></p>
             <form action="/categories/<%=category.id%>/showUpdateCategoryForm" method="get">
                <button type="submit">Update</button>
            </form>

            <form action="/categories/<%=category.id%>/showDeleteCategoryForm" method="get">
                <button type="submit">Delete</button>
            </form>
        </div>
<% }); %>
 <a href="/categories/addnewcategory">Add Category</a>


</body> 
</html>